@model SocialsHub.Core.Models.Dtos.ReferenceDto

@using (Html.BeginForm("AddEditReference", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form data-ajax="true" data-ajax-update="#addEditReferenceDetails" data-ajax-complete="OnComplete">
        <div class="modal fade" id="addEditReferenceModal" tabindex="-1" role="dialog" data-backdrop="static">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4>Dodaj odnośnik</h4>
                    </div>
                    <div class="modal-body" id="addEditReferenceDetails">
                        @await Html.PartialAsync("_AddEditReferenceDetails", Model)
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                        <button class="btn btn-primary" type="submit">Zapisz</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
